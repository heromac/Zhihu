<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:gravity="center_vertical"
    android:background="@color/subscribe_button_unsubscribed_border_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.jari.zhihu.view.widget.CircleImageView
            android:id="@+id/account_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/account_avatar"/>
        <TextView
            android:id="@+id/account_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:text="请登陆"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_fav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@null"
            android:layout_weight="1"
            android:text="@string/user_fav"/>
        <Button
            android:id="@+id/btn_offline_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@null"
            android:layout_weight="1"
            android:text="@string/offline_download"/>
    </LinearLayout>
</LinearLayout>